<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".fragment.HomeFragment">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_primen"/>
    <LinearLayout
        android:background="@drawable/bg_trans"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </LinearLayout>

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/tvContainer"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35dp"
            android:id="@+id/tv_keterangan"
            android:layout_marginRight="5dp"
            android:text="Fact #"/>
        <TextView

            android:textSize="35dp"
            android:layout_centerHorizontal="true"

            android:layout_width="wrap_content"
            android:id="@+id/tv_homeNumber"
            android:text="2000"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <Button
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:background="@drawable/round_shape_prim"
        android:textColor="@color/white"
        android:layout_marginBottom="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_homeDate"
        android:text="@string/other"/>

<LinearLayout
    android:paddingHorizontal="10dp"
    android:layout_below="@id/tvContainer"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_height="wrap_content">

    <TextView
        android:textSize="40dp"
        android:textStyle="italic"
        android:id="@+id/kiri"
        android:layout_marginTop="40dp"
        android:layout_below="@id/tvContainer"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="&quot;"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="20dp"
        android:textStyle="italic"
        android:layout_marginTop="20dp"
       android:layout_centerHorizontal="true"
        android:layout_below="@id/tvContainer"
        android:layout_width="0dp"
        android:layout_weight="7"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/resHome"
        android:paddingVertical="20dp"
        android:textAlignment="center"
        android:text="@string/sample"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="40dp"
        android:textStyle="italic"
        android:id="@+id/kanan"
        android:layout_alignParentRight="true"
        android:layout_marginTop="40dp"
        android:layout_below="@id/tvContainer"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="&quot;"
        android:layout_height="wrap_content" />
</LinearLayout>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/p_bar"
        android:visibility="gone"
        android:layout_centerInParent="true"/>

</RelativeLayout>